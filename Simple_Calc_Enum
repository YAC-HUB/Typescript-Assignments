<html>
<head>
<h2>Call JavaScript function from HTML</h2>
</head>

<body>
<p id="calc">JavaScript Calculator Function!</p>
<input id="click" button type="button" value= "Try it!"/>

<script>
let btn = document.getElementById("click");
btn.addEventListener('click', event => {

"use strict";
var Operators;
(function (Operators) {
    Operators["Add"] = "+";
    Operators["Less"] = "-";
    Operators["Multiply"] = "*";
    Operators["Divide"] = "/";
    Operators["Moldulus"] = "%";
})(Operators || (Operators = {}));
;
function calc(num1, operator, num2) {
    let result;
    if (operator === Operators.Add) {
        result = num1 + num2;
    }
    else if (operator === Operators.Less) {
        result = num1 - num2;
    }
    else if (operator === Operators.Multiply) {
        result = num1 * num2;
    }
    else if (operator === Operators.Divide) {
        result = num1 / num2;
    }
    else if (operator === Operators.Moldulus) {
        result = num2 & num1;
    }
    else {
        throw new Error('Wrong operator / sign!');
    }
    return result;
}
let num1 = prompt('Enter 1st number:', '0');
let operator = prompt('Enter an operator:');
let num2 = prompt('Enter 2nd number:', '0');
const result = calc(Number(num1), operator, Number(num2));
document.write(`${num1} ${operator} ${num2} = ${result}`);
//# sourceMappingURL=Calc_Func.js.map

});
</script>
</body>
</html>
